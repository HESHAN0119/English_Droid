<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:elevation="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shortNote_timestamp_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:gravity="start"
            android:padding="3dp"
            android:text="hour a go"
            android:textColor="@color/textColour"
            android:textSize="17sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:elevation="20dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/shortNote_row_share_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:elevation="10dp"
                android:src="@drawable/ic_baseline_preview_24" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shortNote_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="Title"
            android:textColor="@color/black_shade_1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shortNote_description_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black_shade_1"
            android:fontFamily="sans-serif-black"
            android:text="Description..."
            android:textSize="18sp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/shortnote_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/common_full_open_on_phone" />


    </LinearLayout>

</androidx.cardview.widget.CardView>