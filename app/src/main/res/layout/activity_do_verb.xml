                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/doone" />

                <com.ortiz.touchview.TouchImageView
