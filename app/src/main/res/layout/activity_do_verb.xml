                    android:layout_width="match_parent"
                    android:layout_height="430dp"

                    android:src="@drawable/dotwo" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"

                    android:src="@drawable/havethird" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"

                    android:src="@drawable/dofour" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"

                    android:src="@drawable/dofive" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"

                    android:src="@drawable/dosix" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="440dp"

                    app:srcCompat="@drawable/doseven" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView13"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"

                    app:srcCompat="@drawable/doeight" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"

                    android:src="@drawable/donine" />

                <com.ortiz.touchview.TouchImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="465dp"

                    android:src="@drawable/doten" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3532725936688615/3230526705"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>