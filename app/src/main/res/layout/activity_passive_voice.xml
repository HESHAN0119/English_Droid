<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PassiveVoice.Passive_Voice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="62dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView128"
                android:layout_width="match_parent"
                android:textSize="28sp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/baloo"
                android:textColor="@color/textColour"
                android:layout_height="wrap_content"
                android:text="Passive Voice" />

            <TextView
                android:fontFamily="sans-serif-black"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Reason for us to use the passive voice" />

            <TextView
                android:id="@+id/textView129"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When the subject is unknown" />

            <TextView
                android:id="@+id/textView130"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When the subject is well-known" />

            <TextView
                android:id="@+id/textView131"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginStart="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When the subject is not important" />

            <com.ortiz.touchview.TouchImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="435dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/passive_one" />

            <com.ortiz.touchview.TouchImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="435dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/passive_two" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_passive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3532725936688615/3230526705"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>